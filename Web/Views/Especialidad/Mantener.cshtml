@model DA.Especialidad

@if (Web.Models.Autorizacion.TienePermiso(BL.RolesMenu.menu_especialidad_todo))
{
<div class="row">
    <div class="col s12">
        <div id="validations" class="card card-tabs">
            <div class="card-content">
                <div class="card-title">
                    <div class="row">
                        <div class="col s8 m6 l10">
                            <h4 class="card-title">
                                <a href="@Url.Action("Index","Especialidad")"><i class="material-icons left">keyboard_backspace</i></a>
                                @if (Model.Id == 0)
                                {
                <text>Nueva Especialidad</text> }
                                else
                                {
                <text>Editar Especialidad</text>}
                            </h4>
                        </div>
                    </div>
                </div>
                <form class="validar" id="formValidate" method="post" action="@Url.Action("Guardar","Especialidad")">
                    <div class="row">
                        <input name="Id" type="hidden" value="@Model.Id">
                        <div class="input-field col s12 m5">
                            <label for="cdenominacion">Denominacion*</label>
                            <input id="Denominacion" name="Denominacion" type="text" required value="@Model.Denominacion" autofocus>
                        </div>

                        <div class="input-field col s12 m2">
                            <label for="cmatricula">Matricula*</label>
                            <input id="Matricula" name="Matricula" type="text" required value="@Model.Matricula">
                        </div>
                        <div class="input-field col s12 m2">
                            <label for="cmensualidad">Mensualidad*</label>
                            <input id="Mensualidad" name="Mensualidad" type="text" required value="@Model.Mensualidad">
                        </div>
                        <div class="input-field col s12 m2">
                            <label for="ccuota">Cuotas*</label>
                            <input id="Cuotas" name="Cuotas" type="text" required value="@Model.Cuotas">
                        </div>

                        <div class="input-field col s12">
                            <button data-ajax="true" class="btn right blue" type="submit">
                                Guardar
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>}

<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        // MENU
        var menuEl = $("#menu_cmantenimientos");
        menuEl.collapsible();

        var menu = M.Collapsible.getInstance(menuEl);
        menu.open();

        $("#menu_especialidad").addClass("active");
    });
</script>