@model DA.Curso

@{ var especialidades = ViewBag.EspecialidadId; }

@if (Web.Models.Autorizacion.TienePermiso(BL.RolesMenu.menu_curso_todo))
{
<div class="row">
    <div class="col s12">
        <div id="validations" class="card card-tabs">
            <div class="card-content">
                <div class="card-title">
                    <div class="row">
                        <div class="col s8 m6 l10">
                            <h4 class="card-title">
                                <a href="@Url.Action("Index","Curso")"><i class="material-icons left">keyboard_backspace</i></a>
                                @if (Model.Id == 0)
                                {
                <text>Nuevo Curso</text> }
                                else
                                {
                <text>Editar Curso</text>}
                            </h4>
                        </div>
                    </div>
                </div>
                <form class="validar" id="formValidate" method="post" action="@Url.Action("Guardar","Curso")">
                    <div class="row">
                        <input name="Id" type="hidden" value="@Model.Id">
                        <div class="input-field col s12 m4">
                            <select id="EspecialidadId" name="EspecialidadId" data-val="true">
                                @foreach (var e in especialidades)
                                {
                <option value="@e.Id" @(Model.Id > 0 && e.Id == Model.EspecialidadId ? "selected" : "")>@e.Denominacion</option>}
                            </select>
                            <label>Especialidad</label>
                        </div>
                        <div class="input-field col s12 m4">
                            <label for="ccodigo">Codigo*</label>
                            <input id="Codigo" name="Codigo" type="text" required value="@Model.Codigo" autofocus>
                        </div>
                        <div class="input-field col s12 m4">
                            <label for="cdenominacion">Denominacion*</label>
                            <input id="Denominacion" name="Denominacion" type="text" required value="@Model.Denominacion" autofocus>
                        </div>
                        <div class="input-field col s12 m4">
                            <label for="ccredito">Creditos*</label>
                            <input id="Credito" name="Credito" type="text" required value="@Model.Credito" autofocus>
                        </div>
                        <div class="input-field col s12 m4">
                            <label for="cmatricula">Matricula*</label>
                            <input id="Matricula" name="Matricula" type="text" required value="@Model.Matricula">
                        </div>
                        <div class="input-field col s12 m3">
                            <label for="cmensualidad">Mensualidad*</label>
                            <input id="Mensualidad" name="Mensualidad" type="text" required value="@Model.Mensualidad">
                        </div>
                        <div class="input-field col s12 m3">
                            <label for="ccuotas">Cuotas*</label>
                            <input id="Cuotas" name="Cuotas" type="text" required value="@Model.Cuotas">
                        </div>
                        <div class="input-field col s12 m3">
                            <label for="cduracion">Duracion</label>
                            <input id="Duracion" name="Duracion" type="text" required value="@Model.Duracion">
                        </div>
                        <div class="input-field col s12 m3">
                            <label for="choras">Total de Horas</label>
                            <input id="TotalHoras" name="TotalHoras" type="text" required value="@Model.TotalHoras">
                        </div>

                        <div class="input-field col s12">
                            <button data-ajax="true" class="btn right blue" type="submit">
                                Guardar
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>}

<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        // MENU
        var menuEl = $("#menu_cmantenimientos");
        menuEl.collapsible();

        var menu = M.Collapsible.getInstance(menuEl);
        menu.open();

        $("#menu_curso").addClass("active");
    });
</script>
