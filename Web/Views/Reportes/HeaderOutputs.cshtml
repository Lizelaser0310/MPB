
@{
    Layout = null;
    string nombre_usuario = ViewBag.NombreUsuario;
    decimal saldo_inicial = ViewBag.SaldoInicial;
    decimal saldo_final = ViewBag.SaldoFinal;
    decimal porcentaje_salidas = ViewBag.PorcentajeSalidas;
    DateTime fecha = ViewBag.Fecha;
    string cajero = ViewBag.Cajero;
    string caja = ViewBag.Caja;
    bool estado = ViewBag.Estado;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HeaderOutputs</title>
    <link rel="stylesheet" href="~/Bootstrap/bootstrap.css" />
    <link rel="stylesheet" href="~/Bootstrap/Site.css" />
</head>
<body style="padding: 0px; margin: 0px;">
    <div class="row" style="border-bottom: 2px solid #000">
        <div class="col-xs-3">
            <img src="~/Images/sunedu logo.png" />
        </div>
        <div class="col-xs-6" style="text-align:center;">
            <h4 style="font-weight:bold;text-decoration-line: underline;">SALDOS DE CAJA DEL @fecha.ToString("dd/MM/yyyy")</h4>
            <h5 style="">OFICINA PRINCIPAL</h5>
        </div>
        <div class="col-xs-3">
            <div style="position: relative;">
                <img style="position: absolute; right: 0;" src="~/Images/MPB Logo.png" />
            </div>
        </div>
        <div class="col-xs-6">
            <p>CAJERO: @nombre_usuario - @cajero - @caja</p>
            <p>
                ESTADO: @if (estado)
                {<text>CERRADO</text>}
            else
            {<text>ABIERTO</text>}
            </p>
        </div>
        <div class="col-xs-6">
            <p>Porcentaje de Entradas: @porcentaje_salidas</p>
            <p>Saldo Inicial: @saldo_inicial &nbsp; &nbsp; Saldo Final: @saldo_final </p>
        </div>
    </div>
</body>
</html>
